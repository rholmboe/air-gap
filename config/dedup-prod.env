# Deduplicator Production Configuration
# Core Topics
RAW_TOPICS=transfer
CLEAN_TOPIC=dedup
GAP_TOPIC=gaps

# Kafka Connection
BOOTSTRAP_SERVERS=kafka-cluster:9092

# State Management
STATE_DIR_CONFIG=/var/lib/airgap/dedup/state/
WINDOW_SIZE=10000
MAX_WINDOWS=10000

# Timing Configuration (optimized for high throughput)
GAP_EMIT_INTERVAL_SEC=3600
PERSIST_INTERVAL_MS=500

# Application Configuration
APPLICATION_ID=dedup-gap-app-prod

# Java Configuration (production heap size)
JAVA_OPTS="-Xms2g -Xmx8g"

# Production Logging
logLevel=WARN

# Monitoring
JMX_PORT=9999
